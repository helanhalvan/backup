def bucket_loop(i:int,drivers:[Bucket_driver],futures:[Fut void],ui:bool,sdl_main:SDL_Main) : void {
             let j = 0;
             for a in drivers {
                 futures[j]=a.move();
                 j=j+1;
             };
             for a in futures {
                 get(a);
             };
            if(ui) then {
            let positions = new [(int,int)](|drivers|);
                for w in [0..(|drivers|-1)] {
                    positions[w]=get((drivers[w]).get_pos());
